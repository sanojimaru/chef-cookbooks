upstream <%= @site['name'] %>.unicorn {
  server unix:<%= @site['dir'] %>/shared/sockets/unicorn.sock;
}

server {
  listen 80;
  server_name <%= @site['domain'] %>;

  access_log <%= @site['dir'] %>/shared/log/nginx.access.log;
  error_log <%= @site['dir'] %>/shared/log/nginx.error.log;

  root <%= @site['dir'] %>/current/public;
  index index.html;

  location / {
    try_files $uri $uri.html $uri/index.html @unicorn;
  }

  location @unicorn {
    proxy_read_timeout 180;
    proxy_connect_timeout 180;
    proxy_pass http://<%= @site['name'] %>.unicorn;
  }
}